---
import Image from "astro/components/Image.astro";
import github from "../assets/icons/github.svg";
import linkedin from "../assets/icons/linkedin.svg";
import twitter from "../assets/icons/twitter.svg";
import leetcode from "../assets/icons/leetcode.svg";
import kaggle from "../assets/icons/kaggle.svg";

import * as data from "../content/data/data.mdx";
const { links } = data.frontmatter;
const { bool } = Astro.props;
let navs = {};
if (bool) {
	navs = {
		"/": "Home",
		"#about": "About",
		"#education": "Education",
		"#experience": "Experience",
		"#skills": "Skills",
		"#spotify": "Spotify",
		"/projects": "Projects",
		"/certificates": "Certificates",
	};
} else {
	navs = {
		"/": "Home",
		"/#about": "About",
		"/#education": "Education",
		"/#experience": "Experience",
		"/#skills": "Skills",
		"/#spotify": "Spotify",
		"/projects": "Projects",
		"/certificates": "Certificates",
	};
}
---

<footer
	class="p-10 pb-20 border-t-8 border-base-300 footer footer-center md:pb-10 backdrop-blur-lg text-base-content card"
>
	<ul class="flex flex-col gap-0 md:flex-row menu menu-horizontal md:menu-vertical">
		<li><span class="text-2xl text-white">Pages</span></li>
		<div class="divider divider-horizontal"></div>
		{
			Object.entries(navs).map(([link, name]) => (
				<>
					<li>
						<a href={link} class="text-info step step-neutral">
							{name}
						</a>
					</li>
					<div class="mx-0 divider divider-horizontal" />
				</>
			))
		}
	</ul>
	<div class="flex">
	<a href="mailto:rony000013@proton.me" class="my-0 btn btn-primary btn-outline"> Contact Me  </a>
	<dotlottie-player
		autoplay
		loop
		playMode="normal"
		src="/src/assets/plane.lottie"
		class="h-36"
	>
	</dotlottie-player>
</div>
	<nav class="flex">
		<a href={links.github} target="_blank" rel="noopener noreferrer">
			<Image
				src={github}
				alt={links.github}
				onload="this.style.opacity=1"
				class="w-10 h-10 p-1 m-1.5 easeload bg-white mask mask-squircle"
			/>
		</a>
		<a href={links.linkedin} target="_blank" rel="noopener noreferrer">
			<Image
				src={linkedin}
				alt={links.linkedin}
				onload="this.style.opacity=1"
				class="w-10 h-10 p-1 m-1.5 easeload bg-white mask mask-squircle"
			/>
		</a>
		<a href={links.twitter} target="_blank" rel="noopener noreferrer">
			<Image
				src={twitter}
				alt={links.twitter}
				onload="this.style.opacity=1"
				class="w-10 h-10 p-1 m-1.5 easeload bg-white mask mask-squircle"
			/>
		</a>
		<a href={links.leetcode} target="_blank" rel="noopener noreferrer">
			<Image
				src={leetcode}
				alt={links.leetcode}
				onload="this.style.opacity=1"
				class="w-10 h-10 p-1 m-1.5 easeload bg-black mask mask-squircle"
			/>
		</a>
		<a href={links.kaggle} target="_blank" rel="noopener noreferrer">
			<Image
				src={kaggle}
				alt={links.kaggle}
				onload="this.style.opacity=1"
				class="w-10 h-10 p-1 m-1.5 easeload bg-white mask mask-squircle"
			/>
		</a>
	</nav>
	<aside title="footer" class="text-white">
		<p>Made with ❤️ by Rounak Sen using Astro, TailwindCSS, SolidJS ✨</p>
	</aside>
</footer>

